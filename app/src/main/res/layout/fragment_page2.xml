<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Page2Fragment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#B3FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Церматт Швейцария"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="30dp"
            android:text="Если вы еще не были в горах Швейцарии, самое время рассмотреть вариант поездки именно туда."
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_border"
            android:text="Узнать новое!"
            android:onClick="goToPage5"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imageViewSwipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="89dp"
            android:background="@drawable/ic_swipe_page2" />

    </LinearLayout>
</FrameLayout>