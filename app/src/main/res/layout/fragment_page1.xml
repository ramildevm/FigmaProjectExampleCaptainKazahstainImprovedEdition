<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Page1Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#B3FFFFFF"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Ишгль Австрия"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="30dp"
            android:text="Еще не были на Австрийских горнолыжных курортах? Самое время изучить карты, местность и запланировать дату поездки."
            android:textColor="@color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="180dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_border"
            android:text="Узнать новое!"
            android:onClick="goToPage4"
            android:textSize="13sp"
            android:transitionName="button_transition" />
        <ImageView
            android:id="@+id/imageViewSwipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="69dp"
            android:background="@drawable/ic_swipe_page1" />
    </LinearLayout>
</FrameLayout>