<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="#B3FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginTop="66dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imgGoHome"
                android:layout_width="178dp"
                android:layout_height="178dp"
                android:layout_margin="24dp"
                android:background="@drawable/userimg"
                android:transitionName="image_transition"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Путешествие \nв Альпы"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="30dp"
                android:text="‌Этот‌ ‌сайт‌ ‌для‌ ‌тех, ‌кто всегда хотел побывать в горах‌. Альпийские виды - лучши выбор для вас"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonGo2Page"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:transitionName="button_transition"
                android:background="@drawable/rounded_border"
                android:onClick="goToPage1"
                android:text="Поехали!"
                android:textSize="20sp" />
        </LinearLayout>
</RelativeLayout>